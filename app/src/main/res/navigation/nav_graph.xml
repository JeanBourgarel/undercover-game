<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.myundercover.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/launch_selectPlayersFragment"
            app:destination="@id/selectPlayersFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectPlayersFragment"
        android:name="com.example.myundercover.SelectPlayersFragment"
        android:label="SelectPlayersFragment" >
        <argument
            android:name="sampleData"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.myundercover.CardFragment"
        android:label="CardFragment" />
</navigation>